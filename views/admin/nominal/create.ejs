<%- include ../../partials/header.ejs %>
<!-- Navbar -->
<%- include ../../partials/navbar.ejs %>
<!-- Sidebar -->
<%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Add</li>
          </ol>
        </div>
      </div>
    </div>
  </section>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Add Nominal Form</h3>
            </div>

            <!-- form start -->
            <form action="/nominal/create" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label>Coin</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="coinName"
                    required
                  >
                    <option selected="selected">Select Coin</option>
                    <option value="Gold">Gold</option>
                    <option value="Diamond">Diamond</option>
                    <option value="Jewel">Jewel</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="coinQuantity">Quantity</label>
                  <input
                    type="number"
                    name="coinQuantity"
                    class="form-control"
                    id="coinQuantity"
                    placeholder="Enter coin quantity"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="price">Price</label>
                  <input
                    type="number"
                    name="price"
                    class="form-control"
                    id="price"
                    placeholder="Enter the price"
                    required
                  />
                </div>
              </div>

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<!-- Footer -->
<%- include ../../partials/footer.ejs %>
<!-- Js -->
<%- include ../../partials/js.ejs %>
